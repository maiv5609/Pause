<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Quick pause for 15 minutes?" />

    <Button
        android:id="@+id/confirmQuickPause"
        android:layout_width="100dp"
        android:layout_height="37dp"
        android:layout_below="@+id/TextView1"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_toLeftOf="@+id/cancelQuickPause"
        android:layout_toStartOf="@+id/cancelQuickPause"
        android:background="@drawable/roundbutton"
        android:text="QuickPause" />

    <Button
        android:id="@+id/cancelQuickPause"
        android:layout_width="75dp"
        android:layout_height="37dp"

        android:layout_alignEnd="@+id/TextView1"
        android:layout_alignRight="@+id/TextView1"
        android:layout_below="@+id/TextView1"
        android:background="@drawable/roundbutton"
        android:text="Cancel" />


</RelativeLayout>