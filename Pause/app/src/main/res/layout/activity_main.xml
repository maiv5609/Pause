<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cl"
    android:background="#b8d8d5"
    tools:context="com.pause.MainActivity">

    <Button
        android:id="@+id/quickPauseButton"
        android:layout_width="149dp"
        android:layout_height="37dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/roundbutton"
        android:text="Quick Pause"
        app:layout_constraintBottom_toTopOf="@+id/pauseButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/pauseButton"
        android:layout_width="149dp"
        android:layout_height="37dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/roundbutton"
        android:text="Pause"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/quickPauseButton" />

    <Button
        android:id="@+id/statsButton"
        android:layout_width="75dp"
        android:layout_height="37dp"
        android:layout_marginStart="208dp"
        android:background="@drawable/roundbutton"
        android:text="Stats"
        app:layout_constraintBaseline_toBaselineOf="@+id/storeButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/storeButton"
        android:layout_width="75dp"
        android:layout_height="37dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/roundbutton"
        android:text="Store"
        app:layout_constraintStart_toEndOf="@+id/statsButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Roscoe"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
